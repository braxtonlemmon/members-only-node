<h1><%= title %></h1>
<form action="" method="POST">
  <input type="hidden" name="userId" value="<%= currentUser._id %>">
  <label for="title">Title</label>
  <input type="text" id="title" name="title" class="form-input" placeholder="Title" required>

  <label for="body">Message</label>
  <textarea name="body" id="body" cols="30" rows="10" class="form-input" placeholder="Your message here." required style="resize: none"></textarea>

  <button class="form-submit">Submit</button>
</form>
<p><%= currentUser._id %></p>