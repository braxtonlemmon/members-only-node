<h1><%= title %></h1>

<form action="/sign-up" method="POST">
    <label for="firstName">First name</label>
    <input type="text" class="form-input" id="firstName" name="firstName" placeholder="First Name" required="true" value="<%= locals.user ? user.firstName : '' %>">

    <label for="lastName">Last name</label>
    <input type="text" class="form-input" id="lastName" name="lastName" placeholder="Last Name" required="true" value="<%= locals.user ? user.lastName : '' %>">

    <label for="username">Username (email)</label>
    <input type="text" class="form-input" id="username" name="username" placeholder="email@example.com" required="true" value="<%= locals.user ? user.username : '' %>">

    <label for="password">Password</label>
    <input type="password" class="form-input" id="password" name="password" placeholder="Password" required="true">

    <label for="confirmPassword">Confirm Password</label>
    <input type="password" class="form-input" id="confirmPassword" name="confirmPassword" placeholder="Confirm password" required="true">

  <button class="form-submit">Submit</button>
</form>

<% include errors.ejs %>